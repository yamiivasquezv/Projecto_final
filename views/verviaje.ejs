<% include partials/userheader.ejs %>
<script src="https://cdn.rawgit.com/openlayers/openlayers.github.io/master/en/v5.3.0/build/ol.js"></script>
<div id="viajesuser">
    <form action="/verviaje" method="post">
        <div class="form-group">
            <select id="viaj" class="custom-select">
                <option selected="" style="color:black; border:0; outline:0;">Elija el viaje:</option>
                <option style="color: black;" value="">1</option>
            </select>
            <button id="botonver" type="submit" class="btn btn-primary">
                Ver Viaje
            </button>
        </div>
    </form>
</div>
<div id="mapviajes" class="map" style="height:100%">
    <script>
        var map = L.map('mapviajes').setView([19.4436,-70.6827], 16);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',{
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'}).addTo(map);
    </script>
</div>
