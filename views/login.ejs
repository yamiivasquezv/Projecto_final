<% include partials/_headers %>
<div class="content3">
    <div class="content3.1">
        <div class="bikemove"></div>
        <div class="card login">
            <div class="card-header" style="background-color:#2C3E50; font-weight: bold; color:#D3D3D3; ">
                <h3>Inicio de Sesión</h3>
            </div>
            <div class="card-body user" >
                <form action="/auth" method="post">

                    <div class="form-group uno" >
                        <input type="text" name="usuario" title="Longitud minima de 3 caracteres. Campo obligatorio. No Caracteres especiales"  required minlength="3" maxlength="20" pattern="[A-Za-z0-9]+" placeholder="Usuario" class="form-control" autofocus>
                    </div>
                    <div class="form-group tres" >
                        <input type="password" name="contrasena" title="Longitud mínima de 4 caracteres. Campo obligatorio" required minlength="4" placeholder="Contraseña" class="form-control">
                    </div>
                    <div class="form-group dos">
                        <button type="submit" class="btn btn-primary">
                            Iniciar Sesión
                        </button>
                    </div>
                    <div class="form-group dos">
                        <button type="button" class="btn btn-primary" onclick="location.href='/login'">
                            Registrarse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include partials/_footer %>