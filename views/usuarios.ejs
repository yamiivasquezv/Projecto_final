<% include partials/_headers %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">

        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <legend>Datos del usuario: </legend>

                        <div class="form-group" >
                            <input type="text" name="primer_nombre" placeholder="Primer nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="segundo_nombre" placeholder="Segundo nombre" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="primer_apellido" placeholder="Primer apellido" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="segundo_apellido" placeholder="Segundo apellido" class="form-control">
                        </div>
                        <h5>Tipo de usuario: </h5>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" id="cbox1" name="nombre" value="estudiante" onchange="habilitar(this.checked,id);">
                                Estudiante
                                <br>


                                <input class="form-check-input" type="checkbox" id="cbox2" name="nombre" value="empleado" onchange="habilitar(this.checked,id);">
                                Empleado
                                <br>

                            </label>
                        </div>
                        <br>
                        <div class="form-group" >
                            <input type="text" id="mat" name="codigo" placeholder="Matricula" class="form-control" disabled="true">
                        </div>
                        <div class="form-group">
                            <input type="text" id="ced" name="codigo" placeholder="Cédula" class="form-control" disabled="true">
                        </div>

                        <h5>Información de login: </h5>
                        <div class="form-group">
                            <input type="text" name="user" placeholder="Nombre de usuario" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="pass" placeholder="Contraseña" class="form-control">
                        </div>
                        <button type="button" class="btn btn-primary">
                            Registrar
                        </button>
                        <button type="button" class="btn btn-primary">
                            Cancelar
                        </button>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
<% include partials/_footer %>


