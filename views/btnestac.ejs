<% include partials/_headers %>
<section class="app" >
    <aside class="sidebar" style="margin-top: 85px">
        <nav class="sidebar-nav" style="background-color:#2C3E50;" >
            <ul>
                <li>
                    <a href="#"><img src="Imagenes/bicycle-parking.png" style="font-size: 3.0em; padding-right: 0.5em; width: 2em; display: inline; vertical-align: middle;"></img><span>Estación</span></a>
                    <ul class="nav-flyout">
                        <li>
                            <a href="#"><img src="Imagenes/bicycle-parking.png" style="font-size: 3.0em; padding-right: 0.5em; width: 2em; display: inline; vertical-align: middle;"></img>Registrar Estación</a>
                        </li>
                        <li>
                            <a href="#"><i class="icon ion-md-paper"></i>Ver Estaciones</a>
                        </li>
                        <li>
                            <a href="/administrar" onclick="hideshow2();"><img src="Imagenes/back.png" style="font-size: 3.0em; padding-right: 0.5em; width: 1.4em; display: inline; vertical-align: middle;"></img>Volver</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </aside>
</section>

<div class="contenedorseis">
    <div class="table-wrapper-scroll-y my-custom-scrollbar" id="estaciontable">
        <table class="table table-hover" style=" width:650px;">

            <thead >
            <tr class="table-warning">
                <th scope="col">Estacion</th>
                <th scope="col">Cantidad de Slots</th>
            </tr>
            </thead>
            <tbody>
            <% estacion.forEach(function(estacion, index) { %>
                    <tr class="table-secondary">
                        <td><%=estacion.nombreestacion%></td>
                        <td><%=estacion.cantidadslot%></td>
                    </tr>
            <%})%>
            </tbody>
        </table>
    </div>
</div>
<div class="contenedorseismini">
    <div class="elementoseismini">
        <div class="card" id="adestacion" style="height:350px; width:250px;">
            <div class="card-header" style="background-color:#2C3E50; font-weight: bold; color:#D3D3D3; ">
                <h3>Agregar Estacion</h3>
            </div>
            <div class="card-body" >
                <form id="formestac" style="display:block" action="/addestac" method="post">
                    <div class="form-group">
                        <input type="text" name="nombreestacion" placeholder="Nombre estacion" class="form-control">
                    </div>
                    <div class="form-group">
                        <select class="custom-select" name="cantidadslot">
                            <option selected="">Elija Cantidad</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            Agregar
                        </button>
                        <button type="submit" class="btn btn-primary">
                            Cancelar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include partials/_footer %>